{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "lib": ["es2016", "dom"],
    "noImplicitThis": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": ["./*.ts?"],
  "exclude": ["./node_modules"]
}
